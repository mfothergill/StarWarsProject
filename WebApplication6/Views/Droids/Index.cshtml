@model IEnumerable<WebApplication6.Models.Droids>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DroidClass)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Accuracy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MovementRating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequiresLevel5ProgrammingAbility)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReviewofDroid)
        </th>
