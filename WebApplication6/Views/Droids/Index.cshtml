    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DroidClass)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Accuracy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MovementRating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequiresLevel5ProgrammingAbility)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReviewofDroid)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DroidName }) |
            @Html.ActionLink("Details", "Details", new { id=item.DroidName }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DroidName })
        </td>
    </tr>
}

</table>
